<style>
.{
  font-family: 'Inter', sans-serif;
}
  .announcement-wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: white;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    font-family: Arial, sans-serif;
  }

  .form-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 0.5rem;
    
  }

  .form-subtitle {
    color: #666;
    margin-bottom: 1.5rem;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-row {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .form-control {
    width: 100%;
    margin-top: 10px;
    margin-bottom: 10px;
    
    border: 1px solid #ccc;
    border-radius: 6px;
  }

  .btn-primary {
    background-color: #ff5a5f;
    border: none;
    color: white;
    padding: 0.75rem 1.5rem;
    font-weight: bold;
    border-radius: 6px;
    cursor: pointer;
  }

  .btn-primary:hover {
    background-color: #e6494f;
  }

  .image-carousel {
    display: flex;
    gap: 10px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .carousel-image-wrapper {
    flex: 0 0 auto;
  }

  .carousel-image {
    border-radius: 8px;
    border: 1px solid #ddd;
    width: 150px;
    height: 150px;
    object-fit: cover;
  }
  .form-container {
  max-width: 800px;
  margin: 2rem auto;
  background: #fff;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 0 20px rgba(0,0,0,0.05);
  font-family: Arial, sans-serif;
}

.form-title {
  font-size: 1.8rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.form-subtitle {
  color: #666;
  margin-bottom: 2rem;
}

.carousel-container {
  display: flex;
  overflow-x: auto;
  gap: 10px;
  margin-bottom: 1rem;
}

.carousel-image-wrapper {
  flex: 0 0 auto;
}

.carousel-image {
  width: 150px;
  height: 150px;
  object-fit: cover;
  border-radius: 8px;
  border: 1px solid #ccc;
}

</style>

<div class="form-container">
  <h2 class="form-title">Qu'annoncez-vous aujourd'hui ?</h2>
  <p class="form-subtitle">Grâce à ces informations les acheteurs peuvent trouver votre annonce plus facilement</p>

  <%= form_with(model: announcement, local: true, html: { multipart: true }) do |form| %>
    <% if announcement.images.attached? %>
      <div class="carousel-container">
        <% announcement.images.each do |image| %>
          <div class="carousel-image-wrapper">
            <%= image_tag image.variant(resize_to_limit: [150, 150]), class: "carousel-image" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, 'Titre *' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, 'Description *' %>
      <%= form.text_area :description, class: 'form-control', rows: 10, required: true %>
    </div>

    <div class="d-flex gap-3 mb-3">
      <div class="flex-fill">
        <%= form.label :price, 'Prix *' %>
        <%= form.text_field :price, class: 'form-control', required: true %>
      </div>

      <div class="flex-fill">
        <%= form.label :currency, 'Devise *' %>
        <%= form.select :currency, ['MAD', 'USD', 'EUR'], {}, class: 'form-control', required: true %>
      </div>

      <div class="flex-fill">
        <%= form.label :state, 'État *' %>
        <%= form.select :state, ['Used', 'New'], {}, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="d-flex gap-3 mb-3">
      <div class="flex-fill">
        <%= form.label :category, 'Catégorie *' %>
        <%= form.text_field :category, class: 'form-control', required: true %>
      </div>

      <div class="flex-fill">
        <%= form.label :subcategory, 'Sous-catégorie *' %>
        <%= form.text_field :subcategory, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :images, 'Ajouter des images' %>
      <%= form.file_field :images, multiple: true, direct_upload: true, class: 'form-control' %>
    </div>

    <%= form.submit 'Publier une annonce', class: 'btn btn-primary' %>
  <% end %>
</div>
